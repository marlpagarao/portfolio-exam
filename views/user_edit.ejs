<%- include('header') -%>

<div class="container">
    <h2><%= title %></h2>
    <form action="/update" method="post">
      <input type="hidden" value="<%= user.id %>" name="id">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" placeholder="Enter Name" value="<%= user.name %>" name="name" required>
      </div>
      <div class="form-group">
        <label for="desc">Description</label>
        <input type="text" class="form-control" id="pwd" placeholder="Enter Description" value="<%= user.desc %>" name="desc" required>
      </div>
      <div class="form-group">
        <label for="target">Target Date</label>
        <input type="date" class="form-control" id="pwd" placeholder="Enter Target Date" value="<%= user.target %>" name="target" required>
      </div>
      <div class="form-group">
        <label for="completed">Completed Date</label>
        <input type="date" class="form-control" id="pwd" placeholder="Enter Completed Date" value="<%= user.completed %>" name="completed" required>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>